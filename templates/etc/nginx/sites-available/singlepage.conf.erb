server {
  listen <%= @port %><% if @http2 %> http2<% end %>;
  <% if @enable_ipv6 %>
  listen [::]:<%= @port %>;
  <% end %>
  server_name <%= @name %> <% @server_aliases.each do |server_alias| -%><%= server_alias %> <% end -%>;
  server_name_in_redirect off;
  client_max_body_size <%= @client_max_body_size %>;

  <% if @ssl == true %>
  ssl_certificate      <%= @ssl_certificate %>;
  ssl_certificate_key  <%= @ssl_certificate_key %>;

  <% if @ssl_dh_param %>
  ssl_dhparam <%= @ssl_dh_param %>;
  <% end %>

  ssl on;
  ssl_session_cache  shared:SSL:10m;
  ssl_session_timeout  10m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:ECDHE-RSA-AES128-GCM-SHA256:AES256+EECDH:DHE-RSA-AES128-GCM-SHA256:AES256+EDH:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:ECDHE-RSA-DES-CBC3-SHA:EDH-RSA-DES-CBC3-SHA:AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-SHA256:AES128-SHA256:AES256-SHA:AES128-SHA:DES-CBC3-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!DES:!MD5:!PSK:!RC4";
  <% end %>

  <% if @https_redirect %>
  if ($http_x_forwarded_proto != "https") {
    rewrite ^(.*)$ https://$http_host$1 permanent;
  }
  <% end %>

  root <%= @root_path %>;

  <%- if @log_format -%>
  access_log <%= @log_path %>/access.log <%= @log_format %>;
  <%- else -%>
  access_log <%= @log_path %>/access.log;
  <%- end -%>
  error_log <%= @log_path %>/error.log;

  index index.html index.htm;

  <%- if @http_auth -%>
  auth_basic           "Restricted access";
  auth_basic_user_file <%= @http_auth %>;
  <%- end -%>

  # Block access to "hidden" files and directories whose names begin with a
  # period. This includes directories used by version control systems such
  # as Subversion or Git to store control files.
  location ~ (^|/)\. {
    deny all;
  }

  location / {
    try_files $uri $uri/ /index.html?$args;
  }

  <%- @optional_lines.each do |optional_line| -%>
     <%= optional_line %>;
  <%- end -%>

  <%- if @manage_letsencrypt_root -%>
  location /.well-known {
    root <%= @letsencrypt_root %>;
    try_files $uri $uri/ =404;
  }
  <%- end -%>

  <%- if @etag -%>
  etag on;
  gzip off;
  <%- else -%>
  # gzip
  gzip on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";
  gzip_http_version 1.1;
  gzip_vary on;
  gzip_comp_level 6;
  gzip_proxied any;
  gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js ;
  gzip_buffers 16 8k;
  <%- end -%>
}
