server {
  listen <%= @port %>;
  server_name <%= @name %> <% @server_aliases.each do |server_alias| -%><%= server_alias %> <% end -%>;
  server_name_in_redirect off;


  <% if @ssl == true %>
  ssl_certificate           <%= @ssl_certificate %>;
  ssl_certificate_key       <%= @ssl_certificate_key %>;

  <% if @ssl_dh_param %>
  ssl_dhparam <%= @ssl_dh_param %>;
  <% end %>


  ssl_session_cache  shared:SSL:10m;
  ssl_session_timeout  10m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers AES256+EECDH:AES256+EDH:AES128+EDH:!aNULL;
  <% end %>

  root <%= @root_path %>;

  access_log <%= @log_path %>/access.log;
  error_log <%= @log_path %>/error.log;

  index index.html index.php;

  location / {
    try_files $uri $uri/ /index.php?$args;
  }

  location ~ ^(.+\.php)(.*)$ {
    include fastcgi_params;

    fastcgi_pass 127.0.0.1:<%= @fpm_port %>;
    fastcgi_index index.php;
  }

  # gzip
  gzip on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";
  gzip_http_version 1.1;
  gzip_vary on;
  gzip_comp_level 6;
  gzip_proxied any;
  gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js ;
  gzip_buffers 16 8k;
}

server {
  listen 127.0.0.1:80;
  server_name localhost;

  root <%= @root_path %>;

  location ~ ^/(fpm_status|fpm_ping)$ {
    access_log off;
    allow 127.0.0.1;
    deny all;
    include fastcgi_params;
    fastcgi_pass 127.0.0.1:<%= @fpm_port %>;
  }

  location ~ ^/(cache_reset\.php$){
    auth_basic off;
    allow 127.0.0.1;
    deny all;

    fastcgi_pass 127.0.0.1:<%= @fpm_port %>;
    fastcgi_split_path_info ^(.+\.php)(/.*)$;

    include fastcgi_params;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_param HTTPS off;
    fastcgi_param REMOTE_ADDR $http_x_forwarded_for;
    fastcgi_param SERVER_NAME $host;
    fastcgi_param PHP_VALUE "max_execution_time = 90";

    fastcgi_temp_file_write_size 10m;
    fastcgi_busy_buffers_size 512k;
    fastcgi_buffer_size 512k;
    fastcgi_buffers 16 512k;
    fastcgi_connect_timeout 300;
    fastcgi_send_timeout 300;
    fastcgi_read_timeout 300;
    fastcgi_intercept_errors on;
    fastcgi_next_upstream error invalid_header timeout http_500;

    try_files $uri /index.php =404;
    fastcgi_index index.php;
    include fastcgi_params;
  }
}
